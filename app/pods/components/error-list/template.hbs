<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Subjectcode</th>
            <th>Time</th>
            <th>Description</th>
            <th>Functions</th>
            <th>Comments</th>
        </tr>   
    </thead>
    <tbody>

        {{#each errors}}
        <tr>
            {{!--{{log this}}--}}
            <td>{{targynev}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{kurzuskod}}</td>
            <td>{{idopont}}</td>
            <td>{{link-to "View" "errors.view" this class="btn btn-default btn-sm"}}</td>
            <td>{{link-to "Edit" "errors.edit" this class="btn btn-default btn-sm"}}
                <button {{action "deleteError" this}} class="btn btn-default btn-sm">Delete</button>
            </td>
            <td>{{link-to "Comment" "errors.comments.new" this class="btn btn-primary btn-sm"}}</td>
        </tr>
        {{/each}}

    </tbody>
</table>